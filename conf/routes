# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# controllers for gui access
GET     /                                                       controllers.gui.HomeController.index

GET    /product/search/:keyWord                                 controllers.gui.ProductController.searchGoods(keyWord:String)

GET    /product/detail                                          controllers.gui.ProductController.productDetail

GET    /home/editPage/:id                                       controllers.gui.HomeController.editPage(id: Long)
POST   /home/edit/:id                                           controllers.gui.HomeController.edit(id: Long)
POST   /home/delete/:id                                         controllers.gui.HomeController.delete(id: Long)
POST   /home/add                                                controllers.gui.HomeController.add()


# manage
GET     /manage                                                 controllers.gui.manage.IndexController.index

GET     /manage/cate/map                                        controllers.gui.manage.CategoryController.getRootCates
GET     /manage/cate/map/getleafcate/:cateRootId                controllers.gui.manage.CategoryController.getLeafCates(cateRootId: String)
POST    /manage/cate/map/findmallcate                           controllers.gui.manage.CategoryController.getMallCates
POST    /manage/cate/map/edit                                   controllers.gui.manage.CategoryController.edit

GET     /trend/:mall/:skuid                                     controllers.gui.DailyPriceController.priceTrend(mall:String, skuid:String)

# Routes For APIS
# controllers for api access for app.
# ~~~~
->      /api/                                                   api.Routes

